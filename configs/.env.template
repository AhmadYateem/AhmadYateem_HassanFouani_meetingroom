# Database Configuration (MySQL)
DATABASE_URL=mysql+mysqlconnector://admin:secure_password@mysql:3306/smartmeetingroom
TEST_DATABASE_URL=mysql+mysqlconnector://admin:secure_password@mysql:3306/smartmeetingroom_test
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_USER=admin
DATABASE_PASSWORD=secure_password
DATABASE_NAME=smartmeetingroom
DATABASE_POOL_SIZE=5

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Service Ports
USER_SERVICE_PORT=5001
ROOM_SERVICE_PORT=5002
BOOKING_SERVICE_PORT=5003
REVIEW_SERVICE_PORT=5004

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://users-service:5001
ROOM_SERVICE_URL=http://rooms-service:5002
BOOKING_SERVICE_URL=http://bookings-service:5003
REVIEW_SERVICE_URL=http://reviews-service:5004

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=300

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin
RABBITMQ_VHOST=/

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Security
BCRYPT_LOG_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=1800

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
