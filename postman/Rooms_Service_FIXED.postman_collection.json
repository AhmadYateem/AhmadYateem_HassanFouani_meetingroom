  "item": [
    {
      "name": "0. Setup - Login First",
      "item": [
        {
          "name": "0.1 Login Admin (RUN THIS FIRST)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.tokens) {",
                  "    pm.collectionVariables.set('token', jsonData.data.tokens.access_token);",
                  "    pm.collectionVariables.set('user_id', jsonData.data.user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"adminuser\",\n  \"password\": \"SecurePass@123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5001/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5001",
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
