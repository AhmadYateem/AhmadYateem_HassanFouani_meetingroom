{
  "info": {
    "name": "Smart Meeting Room - Rooms Service",
    "_postman_id": "rooms-service-collection",
    "description": "API collection for Rooms Service - inventory, availability, and search",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const token = pm.environment.get('access_token');",
          "if (!token) {",
          "    console.warn('access_token is not set. Run Users auth requests first.');",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Rooms",
      "item": [
        {
          "name": "List Rooms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{rooms_service_url}}/api/rooms?page=1&per_page=20",
              "host": ["{{rooms_service_url}}"],
              "path": ["api", "rooms"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            },
            "description": "Paginated list of rooms with optional filtering parameters."
          },
          "response": []
        },
        {
          "name": "Create Room",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Room created', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "if (jsonData && jsonData.data && jsonData.data.id) {",
                  "    pm.environment.set('room_id', jsonData.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Board Room A\",\n  \"capacity\": 12,\n  \"floor\": 5,\n  \"building\": \"HQ\",\n  \"amenities\": [\"projector\", \"whiteboard\"],\n  \"hourly_rate\": 35.0\n}"
            },
            "url": {
              "raw": "{{rooms_service_url}}/api/rooms",
              "host": ["{{rooms_service_url}}"],
              "path": ["api", "rooms"]
            },
            "description": "Create a new meeting room (Facility Manager/Admin)."
          },
          "response": []
        },
        {
          "name": "Room Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{rooms_service_url}}/api/rooms/{{room_id}}",
              "host": ["{{rooms_service_url}}"],
              "path": ["api", "rooms", "{{room_id}}"]
            },
            "description": "Retrieve details for a specific room."
          },
          "response": []
        },
        {
          "name": "Update Room",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Board Room A - Updated\",\n  \"capacity\": 14,\n  \"amenities\": [\"projector\", \"whiteboard\", \"speakerphone\"]\n}"
            },
            "url": {
              "raw": "{{rooms_service_url}}/api/rooms/{{room_id}}",
              "host": ["{{rooms_service_url}}"],
              "path": ["api", "rooms", "{{room_id}}"]
            },
            "description": "Update room details (Facility Manager/Admin)."
          },
          "response": []
        },
        {
          "name": "Delete Room",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{rooms_service_url}}/api/rooms/{{room_id}}",
              "host": ["{{rooms_service_url}}"],
              "path": ["api", "rooms", "{{room_id}}"]
            },
            "description": "Delete a room (Admin only)."
          },
          "response": []
        },
        {
          "name": "Available Rooms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{rooms_service_url}}/api/rooms/available?start_time=2025-12-01T10:00:00Z&end_time=2025-12-01T11:00:00Z&capacity=10",
              "host": ["{{rooms_service_url}}"],
              "path": ["api", "rooms", "available"],
              "query": [
                {
                  "key": "start_time",
                  "value": "2025-12-01T10:00:00Z"
                },
                {
                  "key": "end_time",
                  "value": "2025-12-01T11:00:00Z"
                },
                {
                  "key": "capacity",
                  "value": "10"
                }
              ]
            },
            "description": "Get rooms available in a time window."
          },
          "response": []
        },
        {
          "name": "Advanced Search",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"capacity_min\": 8,\n  \"capacity_max\": 30,\n  \"amenities\": [\"camera\", \"whiteboard\"],\n  \"building\": \"HQ\"\n}"
            },
            "url": {
              "raw": "{{rooms_service_url}}/api/rooms/search",
              "host": ["{{rooms_service_url}}"],
              "path": ["api", "rooms", "search"]
            },
            "description": "Filter rooms by capacity, amenities, and building."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "{{rooms_service_url}}",
      "type": "string"
    }
  ]
}
