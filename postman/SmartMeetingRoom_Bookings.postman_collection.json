{
  "info": {
    "name": "Smart Meeting Room - Bookings Service",
    "_postman_id": "bookings-service-collection",
    "description": "API collection for Bookings Service - scheduling, conflicts, and availability",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const token = pm.environment.get('access_token');",
          "if (!token) {",
            "console.warn('access_token is not set. Run Users auth requests first.');",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Booking created', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "if (jsonData && jsonData.data && jsonData.data.id) {",
                  "    pm.environment.set('booking_id', jsonData.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"room_id\": \"{{room_id}}\",\n  \"title\": \"Quarterly Planning\",\n  \"start_time\": \"2025-12-01T10:00:00Z\",\n  \"end_time\": \"2025-12-01T11:00:00Z\",\n  \"attendees\": 12,\n  \"is_recurring\": false\n}"
            },
            "url": {
              "raw": "{{bookings_service_url}}/api/bookings",
              "host": ["{{bookings_service_url}}"],
              "path": ["api", "bookings"]
            },
            "description": "Create a booking for a room."
          },
          "response": []
        },
        {
          "name": "List Bookings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{bookings_service_url}}/api/bookings?page=1&per_page=20",
              "host": ["{{bookings_service_url}}"],
              "path": ["api", "bookings"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            },
            "description": "List bookings with pagination and optional filters."
          },
          "response": []
        },
        {
          "name": "Booking Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{bookings_service_url}}/api/bookings/{{booking_id}}",
              "host": ["{{bookings_service_url}}"],
              "path": ["api", "bookings", "{{booking_id}}"]
            },
            "description": "Retrieve booking details by id."
          },
          "response": []
        },
        {
          "name": "Update Booking",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Quarterly Planning - Updated\",\n  \"start_time\": \"2025-12-01T12:00:00Z\",\n  \"end_time\": \"2025-12-01T13:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{bookings_service_url}}/api/bookings/{{booking_id}}",
              "host": ["{{bookings_service_url}}"],
              "path": ["api", "bookings", "{{booking_id}}"]
            },
            "description": "Update an existing booking."
          },
          "response": []
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{bookings_service_url}}/api/bookings/{{booking_id}}",
              "host": ["{{bookings_service_url}}"],
              "path": ["api", "bookings", "{{booking_id}}"]
            },
            "description": "Cancel a booking (user-owned or Admin)."
          },
          "response": []
        },
        {
          "name": "Check Availability",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Availability check succeeded', function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"room_id\": \"{{room_id}}\",\n  \"start_time\": \"2025-12-01T13:00:00Z\",\n  \"end_time\": \"2025-12-01T14:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{bookings_service_url}}/api/bookings/check-availability",
              "host": ["{{bookings_service_url}}"],
              "path": ["api", "bookings", "check-availability"]
            },
            "description": "Check if a room is free in a time window."
          },
          "response": []
        },
        {
          "name": "Conflicts (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{bookings_service_url}}/api/bookings/conflicts",
              "host": ["{{bookings_service_url}}"],
              "path": ["api", "bookings", "conflicts"]
            },
            "description": "List conflicting bookings (Admin only)."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "{{bookings_service_url}}",
      "type": "string"
    }
  ]
}
