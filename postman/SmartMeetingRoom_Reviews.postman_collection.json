{
  "info": {
    "name": "Smart Meeting Room - Reviews Service",
    "_postman_id": "reviews-service-collection",
    "description": "API collection for Reviews Service - submissions, moderation, and votes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "const token = pm.environment.get('access_token');",
          "if (!token) {",
          "    console.warn('access_token is not set. Run Users auth requests first.');",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Create Review",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Review created', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "if (jsonData && jsonData.data && jsonData.data.id) {",
                  "    pm.environment.set('review_id', jsonData.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"room_id\": \"{{room_id}}\",\n  \"booking_id\": \"{{booking_id}}\",\n  \"rating\": 5,\n  \"title\": \"Excellent space\",\n  \"comment\": \"Plenty of light and great A/V setup.\",\n  \"pros\": [\"projector\", \"whiteboard\"],\n  \"cons\": []\n}"
            },
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews"]
            },
            "description": "Submit a review for a completed booking."
          },
          "response": []
        },
        {
          "name": "Review Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/{{review_id}}",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "{{review_id}}"]
            },
            "description": "Fetch review details by id."
          },
          "response": []
        },
        {
          "name": "Update Review",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 4,\n  \"title\": \"Great space\",\n  \"comment\": \"Solid meeting room with strong Wi-Fi.\"\n}"
            },
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/{{review_id}}",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "{{review_id}}"]
            },
            "description": "Update a review (author only)."
          },
          "response": []
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/{{review_id}}",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "{{review_id}}"]
            },
            "description": "Delete a review (author or Admin)."
          },
          "response": []
        },
        {
          "name": "Room Reviews",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/room/{{room_id}}?page=1&per_page=10",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "room", "{{room_id}}"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "10"
                }
              ]
            },
            "description": "List reviews for a room with pagination."
          },
          "response": []
        },
        {
          "name": "Flag Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Inappropriate language\"\n}"
            },
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/{{review_id}}/flag",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "{{review_id}}", "flag"]
            },
            "description": "Flag a review for moderation."
          },
          "response": []
        },
        {
          "name": "Moderate Review",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"approve\",\n  \"notes\": \"Reviewed and approved.\"\n}"
            },
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/{{review_id}}/moderate",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "{{review_id}}", "moderate"]
            },
            "description": "Approve, hide, or reject a flagged review (Moderator/Admin)."
          },
          "response": []
        },
        {
          "name": "Helpful Vote",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/{{review_id}}/helpful",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "{{review_id}}", "helpful"]
            },
            "description": "Mark review as helpful."
          },
          "response": []
        },
        {
          "name": "Unhelpful Vote",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{reviews_service_url}}/api/reviews/{{review_id}}/unhelpful",
              "host": ["{{reviews_service_url}}"],
              "path": ["api", "reviews", "{{review_id}}", "unhelpful"]
            },
            "description": "Mark review as unhelpful."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "{{reviews_service_url}}",
      "type": "string"
    }
  ]
}
